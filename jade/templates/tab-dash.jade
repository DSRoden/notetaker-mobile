html
  body
    ion-view(title='Dashboard')
      ion-content.padding      
        .dashboard(ng-if="dashboard")
            h1 Dash
            h3 {{rootuser.username}}
            a.item.item-avatar.item-button-right
                img(ng-src='{{rootuser.avatar}}')
                p {{rootuser.username}}
                p {{count}}
                .button.button-positive(ng-click="logout()") Logout
        h3 Global Chat
        #messages.panel.callout.radius
            .message(ng-repeat='message in messages')
                .avatar(style='background-image:url("{{message.avatar}}")')
                .content {{message.content}}
        input#message(type='text', ng-model='message')
        button.success.tiny.radius(ng-click='chat(message)') Send Message